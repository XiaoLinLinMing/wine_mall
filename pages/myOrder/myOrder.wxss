/* pages/myOrder/myOrder.wxss */
.order-list{
  width: 100%;
  display: flex;
  flex-direction: column;
}

.center{
  width: 100%;
  display: flex;
  justify-content: center;
}

.order-item{
  margin-top: 30rpx;
  width: 600rpx;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  background-color: white;
  border: 1rpx solid rgb(243, 242, 242);
  border-radius: 10rpx;
}

.order-id{
  height: 50rpx;
  width: 560rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 10rpx;
  padding-bottom: 10rpx;
  font-size: 28rpx;
  font-weight: 600;
  border-bottom: 1rpx solid #ccc;
}

.order-other{
  height: 50rpx;
  width: 560rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #888;
  
}

.order-button{
  width: 100rpx;
  margin-right: 20rpx;
  margin-bottom: 10rpx;
}

.order-option{
  width: 100%;
  display: flex;
  flex-direction:row-reverse;
  padding-bottom: 10rpx;
  padding-right: 10rpx;
}

.back{
  width: 100%;
  height: 100%;
  background-color: rgb(250,250,250);
  position: fixed;
}

.empty{

  color: #888;
  font-size: 28rpx;
}

.order_info{
  width: 600rpx;
  height: 800rpx;
  background-color: white;
}

.goods_list{

  width: 70%;
  padding-left: 15%;
  padding-right: 15%;
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;

}

.goods_name{

  line-height: 80rpx;
  font-size: 24rpx;
  color: rgb(41, 40, 40);
}

.goods_price{

  line-height: 80rpx;
  font-size: 26rpx;
  color: red;
}

.goods_qty{

  line-height: 80rpx;
  font-size: 26rpx;
  color: #ccc;
}